<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- item_target_dan_capaian.xml -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/kabupatenTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAB. ABC"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/textView5sss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monokultur"
                    android:textFontWeight="900"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/capaianTanamMonokultur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Capaian Tanam --Ha/--Ha"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/persenCapaianTanamMonokultur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aktualisasi -- %"
                            android:textAlignment="textEnd"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbCapaianTanamMonokultur"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="80" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/capaianPanenMonokultur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Capaian Panen --Ton/--Ton"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/aktualisasiPanenMonokultur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aktualisasi -- %"
                            android:textAlignment="textEnd"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbCapaianPanenMonokultur"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="80"
                        android:progressTint="#E91E63" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/textView5s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tumpangsari"
                    android:textFontWeight="900"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/capaianTanamTumpangsari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Capaian Tanam --Ha/--Ha"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/persenCapaianTanamTumpangsari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aktualisasi -- %"
                            android:textAlignment="textEnd"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbCapaianTanamTumpangsari"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="80" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="fill_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/capaianPanenTumpangsari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Capaian Panen --Ton/--Ton"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/aktualisasiPanenTumpangsari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aktualisasi -- %"
                            android:textAlignment="textEnd"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbCapaianPanenTumpangsari"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="80"
                        android:progressTint="#E91E63" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>