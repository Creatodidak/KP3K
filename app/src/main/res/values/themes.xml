<?xml version="1.0" encoding="utf-8"?><!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KP3K" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#3a8d4c</item>
        <item name="colorPrimaryDark">#3a8d4c</item>
        <item name="colorAccent">#3A8D4C</item>
        <item name="android:textColor">#070707</item>
        <item name="android:fontFamily">@font/workregular</item>
        <item name="colorSecondary">#3a8d4c</item>
        <item name="colorOnSecondary">#FFFFFF</item>
    </style>
    <style name="Theme.KP3K.PIMPINAN" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#F44336</item>
        <item name="android:textColor">#070707</item>
        <item name="android:fontFamily">@font/workregular</item>
    </style>
    <!-- themes.xml -->

    <style name="Theme.KP3K.PAMATWIL" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="colorAccent">#FFC107</item>
        <item name="android:textColor">#070707</item>
        <item name="android:fontFamily">@font/workregular</item>
    </style>


    <style name="VideoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="PinBox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:background">@drawable/pin_background</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomPasswordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">#4CAF50</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="Theme.KP3K.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KP3K.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KP3K.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
